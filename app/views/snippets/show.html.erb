<p id="notice"><%= notice %></p>

<div class="card">

    <div class="card-block" id="snip-title">
      <h4 class="card-title"><%= @snippet.title.capitalize %></h4>
    </div>

    <div class="card-block">
      <%= markdown(@snippet.content).html_safe %>
      <%= image_tag(@snippet.image_url.to_s) %>
    </div>

    <div class="card-block">
      <%= link_to 'Edit', edit_snippet_path(@snippet) %> |
      <%= link_to 'Back', snippets_path %>
    </div>

</div>